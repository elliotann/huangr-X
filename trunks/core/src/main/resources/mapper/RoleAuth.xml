<?xml version="1.0" encoding="UTF-8" ?>
<!DOCTYPE mapper PUBLIC "-//mybatis.org//DTD Mapper 3.0//EN" "http://mybatis.org/dtd/mybatis-3-mapper.dtd">
<mapper namespace="com.easysoft.member.backend.dao.IRoleAuthDao">
    <resultMap id="roleAuthMap" type="RoleAuth">
        <id property="id" column="id"/>
        <id property="roleId" column="role_id"/>
        <id property="operids" column="operids"/>
    </resultMap>
    <insert id="save" parameterType="Role">
        insert t_role (rolename,rolememo) values (#{rolename},#{rolememo})
    </insert>
    <select id="queryAuthByRoleId" resultMap="roleAuthMap">
        select * from t_role_auth where role_id=#{id}
    </select>
    <select id="getRoleByName" resultMap="roleMap">
        select * from t_role where rolename=#{rolename}
        <if test="roleid!=0">
            and roleid!=#{roleid}
        </if>
    </select>
    <select id="queryById" resultMap="roleMap">
        select * from t_role where roleid=#{id}
    </select>
    <update id="update" parameterType="Role">
        UPDATE t_role
        SET rolename = #{rolename}
        <if test="rolememo!=null">
            ,rolememo = #{rolememo}
        </if>

        WHERE roleid = #{roleid}

    </update>
    <delete id="deleteById">
        delete from t_role where roleid=#{id}
    </delete>

</mapper>

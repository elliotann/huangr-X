<?xml version="1.0" encoding="UTF-8" ?>
<!DOCTYPE mapper PUBLIC "-//mybatis.org//DTD Mapper 3.0//EN" "http://mybatis.org/dtd/mybatis-3-mapper.dtd">
<mapper namespace="com.easysoft.jeap.core.member.dao.IRoleDao">
    <resultMap id="roleMap" type="Role">
        <id property="id" column="role_id"/>
        <id property="name" column="name"/>
        <id property="desc" column="descript"/>
    </resultMap>
    <select id="queryForAll" resultMap="roleMap">
        select * from t_role
    </select>
    <select id="queryById" resultMap="roleMap">
        select * from t_role where role_id=#{id}
    </select>
    <insert id="save" parameterType="Role">
        insert t_role (name,desc) values (#{name},#{descript})
    </insert>
    <update id="update" parameterType="Role">
        UPDATE t_role
        SET name = #{name},
        desc = #{desc}
        WHERE role_id = #{id}
    </update>

    <delete id="deleteById">
        delete from t_role where id=#{id}
    </delete>
    <select id="queryForPage" parameterType="Role" resultMap="roleMap">
        select * from t_role
    </select>
</mapper>
